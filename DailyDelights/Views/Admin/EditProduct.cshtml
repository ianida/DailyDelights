@{
    Layout="~/Views/Admin/_AdminLayout.cshtml";
}
@model DailyDelights.ViewModels.ProductUpdateViewModel
@{
    string success=ViewBag.Success;
}
<div class="container">
    <div class="row">
        <div class="col-14">
            <h1 class="text-center">Add new category</h1>
             @if(!string.IsNullOrEmpty(success)){
                <h1>@success</h1>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10">
            <div class="" asp-validation-summary="All"></div>
            <form asp-controller="Admin" asp-method="EditProduct" method="post" enctype="multipart/form-data">
             <!-- #region  #region -->
                <input type="hidden" value="@Model.ProductDTO.Id" asp-for="ProductDTO.Id">
                <input type="text" value="@Model.ProductDTO.Title" class="form-control mt-2" asp-for="ProductDTO.Title" id="" placeholder="Enter Product Title">
                <span asp-validation-for="ProductDTO.Title"></span>
                <input type="text" value="@Model.ProductDTO.Description" class="form-control mt-2" asp-for="ProductDTO.Description" id="" placeholder="Enter Product Description">
                <span asp-validation-for="ProductDTO.Description"></span>
                <input type="number"  class="form-control mt-2" asp-for="ProductDTO.Price" value="@Model.ProductDTO.Price" id="" placeholder="Enter Product Price">
                <span asp-validation-for="ProductDTO.Price"></span>
                <input type="text" class="form-control mt-2" asp-for="ProductDTO.Stock" value="@Model.ProductDTO.Stock" id="" placeholder="Enter Product Stock">
                <span asp-validation-for="ProductDTO.Stock"></span>
                <div class="form-group">
                <label asp-for="ProductDTO.CategoryId">Category</label>
                <select asp-for="ProductDTO.CategoryId" class="form-control" asp-items="Model.Categories"></select>
                <span asp-validation-for="ProductDTO.CategoryId" class="text-danger"></span>
                </div>

                  <div class="form-group">
                <label asp-for="ProductDTO.Image">Product Image</label><br>
                <input type="file" asp-for="ProductDTO.Image" id="">
                <span asp-validation-for="ProductDTO.Image" class="text-danger"></span>
                <img style="width: 400px; height: 400px; border-radius: 10px; object-fit: cover;" src="~/images/productImages/@Model.ProductDTO.ImageUrl" alt=""/>
                <input type="hidden" value="@Model.ProductDTO.ImageUrl" asp-for="ProductDTO.ImageUrl"/>
                </div>

                <input type="submit" class="btn btn-primary mt-2" value="Update">
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</div>