
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailyDelights</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DailyDelights.styles.css" asp-append-version="true" />
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">

<!-- Bootstrap JS (required for carousel functionality) -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  bg-success border-bottom box-shadow">
            <div class="container-fluid">
 
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Delights</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="GetProducts">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownCategories" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Categories
          </a>
          <ul class="dropdown-menu bg-success" aria-labelledby="navbarDropdownShop">
           
            <li><a class="dropdown-item text-white" href="#">Clothing</a></li>
            <li><a class="dropdown-item text-white" href="#">Footware</a></li>
            <li><a class="dropdown-item text-white" href="#">Seasonal Collection</a></li>
          </ul>
        </li>
                    </ul>
                </div>
            </div>

            <div class="container" style="width: 350px; position:relative;">
                   @if(User.Identity.IsAuthenticated){
                     <div class="row">
                      <div class="col-3">
                        <a class="btn"  asp-controller="Cart" asp-action="Index"><i class="bi bi-cart-dash text-white fw-bold" style="font-size: large;"></i></a> 
                      </div>
                        <div class="col-8">
                         
                           <a class="nav-link dropdown-toggle text-white btn" style="background-color: #FFC32C;" href="#" id="navbarDropdownShop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @User.Identity.Name
         
          </a>
          <ul class="dropdown-menu" style="background-color: #FFC32C; position: absolute; right: 2%;" aria-labelledby="navbarDropdownShop">
          
            <li><a class="dropdown-item text-white" asp-controller="Order" asp-action="GetOrders">Orders</a></li>
            <li><a class="dropdown-item text-white" asp-controller="Profile" asp-action="GetProfile">Profile</a></li>
            <li><a class="dropdown-item text-white" asp-controller="Account" asp-action="Logout">Logout</a></li>
          </ul>
                        </div>
                     </div>
                   }else{
                    <div class="row">
                        <div class="col-6">
                           
                            <a class="btn" style="background-color: #FFC32C; color: white;" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                        <div class="col-6">
                             <a class="btn" style="background-color: #FFC32C; color: white;" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    </div>
                   }
                    
            </div>
        </nav>
    </header>
   
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
  

  <footer style="background-color: #2d6a4f; color: #fff; padding: 30px;">
    <div class="row">
        <div class="col-md-4">
            <h5>About Us</h5>
            <p>We bring you the latest trends with a focus on quality and customer satisfaction.</p>
        </div>
        <div class="col-md-4">
            <h5>Quick Links</h5>
            <ul style="list-style-type: none; padding: 0;">
                <li><a href="#" style="color: #fff; text-decoration: none;">Home</a></li>
                <li><a href="#" style="color: #fff; text-decoration: none;">Shop</a></li>
                <li><a href="#" style="color: #fff; text-decoration: none;">Contact</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h5>Follow Us</h5>
            <p>
                <a href="#" style="color: #fff; text-decoration: none; margin-right: 10px;">Facebook</a>
                <a href="#" style="color: #fff; text-decoration: none; margin-right: 10px;">Instagram</a>
                <a href="#" style="color: #fff; text-decoration: none;">Twitter</a>
            </p>
        </div>
    </div>
    <div style="text-align: center; margin-top: 20px;">
        <p>&copy; 2025 Delights. All rights reserved.</p>
    </div>
</footer>


   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
      .carousel.carousel('cycle');

       
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
